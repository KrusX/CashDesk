@model IEnumerable<CashTicket.Models.Wagon>

@{
    ViewBag.Title = "Вагоны";
}

<div align="center">
    <h2>Список вагонов</h2>
    @Html.ActionLink("Создать вагон", "Create")
</div>

@using (Html.BeginForm("Index", "Wagons", FormMethod.Get))
{
    <table class="table" style="width:50%; margin:auto; margin-bottom:20px; margin-top:20px;">
        <tr>
            <td>
                @Html.TextBox("search_wagon", null, new { placeholder = "Номер поезда", @class = "form-input" })
            </td>
            <td>
                <input type="submit" value="Искать вагоны" />
            </td>
        </tr>
    </table>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Номер вагона")
        </th>
        <th>
            @Html.DisplayName("Номер поезда")
        </th>
        <th>
            @Html.DisplayName("Тип вагона")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_wagon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Train.id_train)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type_wagon.name_type)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.id_wagon }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.id_wagon }) |
                @Html.ActionLink("Места вагона", "Index", "Places", new { id = item.id_wagon }, null) |
            </td>
        </tr>
    }

</table>
