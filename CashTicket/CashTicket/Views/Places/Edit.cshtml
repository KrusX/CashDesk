@model CashTicket.Models.Place

@{
    ViewBag.Title = "Редактирование места";
}

<h2>Редактирование места №@Html.DisplayFor(model => model.id_place)</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_place)

        <div class="form-group">
            @Html.LabelFor(model => model.wagon_id, "Номер вагона", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("wagon_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.wagon_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернуться к списку вагонов", "Index", "Wagons")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
