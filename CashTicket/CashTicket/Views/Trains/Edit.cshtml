@model CashTicket.Models.Train

@{
    ViewBag.Title = "Редактирование поезда";
}

<h2>Редактирование поезда №@Html.DisplayFor(model => model.id_train)</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_train)

        <div class="form-group">
            @Html.LabelFor(model => model.type_train_id, "Тип поезда", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("type_train_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.type_train_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернуться к списку поездов", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
